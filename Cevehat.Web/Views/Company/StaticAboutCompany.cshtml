@using Cevehat.Web.Models
@model  Company


<section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
    <div class="my-auto">
        <div class="float-right mb-4">
            @Ajax.ActionLink("Edit", "EditAboutCompany", "Company", new AjaxOptions()
       {
           HttpMethod = "GET",
           InsertionMode = InsertionMode.Replace,
           UpdateTargetId = "modalBody",
           OnSuccess = "showModal('About Company')"
       }, new { @class = "btn btn btn-warning" })
        </div>

        <h1 class="mb-0">
            @(Model.CompanyName ?? "[Company Name]" )
        </h1>
        <div class="subheading mb-5">
            <a href="mailto:@Model.CompanyWebSite">@Model.CompanyWebSite</a>
        </div>
    </div>
</section>


