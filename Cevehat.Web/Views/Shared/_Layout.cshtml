<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
 @*@Styles.Render("")*@
</head>
<body>
    <div class="navbar navbar-light navbar-fixed-top" style="background-color: #e3f2fd ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Cevehat", "Index", "Default", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
                <div class="float-right">
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Skills", "Index", "Skills")</li>
                        <li>@Html.ActionLink("Job Titles", "Index", "JobTitles")</li>
                        <li>@Html.ActionLink("Job Titles Skills [Order By Skill]", "Index", "JobTitles_Skills", new { orderCode = "skill", }, null)</li>
                        <li>@Html.ActionLink("Job Titles Skills [Order By JobTitle]", "Index", "JobTitles_Skills", new { orderCode = "jobTitle", }, null)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cevehat</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
