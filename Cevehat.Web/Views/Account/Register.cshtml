@model Cevehat.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_JobBoardLayout.cshtml";
}




<div class="main-page-title">
    <!-- start main page title -->
    <div class="container">
        <h4 class="register-title">Register</h4>
        <div class="row">
            <div class="col-md-5">
                <div class="form-regist-container">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input-form", placeholder = "First Name" })
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger", style = "float: right;" })
                            <div class="register-aksen"></div>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-form", placeholder = "Last Name" })
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger", style = "float: right;" })
                            <div class="register-aksen"></div>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-form", placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", style = "float: right;" })
                            <div class="register-aksen"></div>
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-form", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", style = "float: right;" })
                            <div class="register-aksen"></div>
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-form", placeholder = "Confirm Password" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            <div class="register-aksen"></div>
                        </div>
                        <div class="form-group">
                            @*@Html.DropDownList("UserRoles", ViewBag.Name as IEnumerable<SelectListItem>, " ", new { @class = "form-control input-form" })*@
                            <select class="form-control input-form" data-val="true" data-val-required="The UserRoles field is required." id="UserRoles" name="UserRoles">
                                <option selected="selected" value="Employee">Company HR</option>
                                <option value="Employer">Job Seeker</option>
                            </select>
                            @Html.ValidationMessageFor(m => m.UserRoles, "", new { @class = "text-danger" })
                            <div class="register-aksen"></div>
                            <input type="submit" class="btn btn-default btn-green" value="REGISTER" />
                        </div>
                    }
                </div>
            </div>

            <div class="col-md-7 register">
                <h5>Already A Member? Log in Here.</h5>

                @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-default btn-green" })

            </div>
        </div>
    </div>
</div>