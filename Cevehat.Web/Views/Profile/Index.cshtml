@model ProfileIndexViewModel
@using Cevehat.Web.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Template/_Layout.cshtml";
    Page.Image = "~/Template/img/profile.jpg";
    Page.Title = "Profile";
}

@section Styles{
    <link rel="stylesheet" href="~/Template/css/sb-admin.css" />
}

<section class="resume-section p-3 p-lg-5 d-flex d-column" id="login">
    <div class="my-auto">
        <div class="card card-login mx-auto mt-5" style="min-width: 40rem;">
            <div class="card-header">Login</div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Profile", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    if (Model.ValidationForLogin)
                    {@Html.ValidationSummary(true, "", new { @class = "text-danger" })}
                <div class="form-group">
                    <label>Email address</label>
                    @Html.TextBox("Email", Model.Email, new { @class = "form-control" })
                    @if (Model.ValidationForLogin)
                    {@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", style = "float: right;" })}
                </div>
                <div class="form-group">
                    <label>Password</label>
                    @Html.Password("Password", Model.Password, new { @class = "form-control" })
                    @if (Model.ValidationForLogin)
                    {@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", style = "float: right;" })}
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m=> m.RememberMe)
                            @Html.LabelFor(m=> m.RememberMe)
                        </div>
                    </div>
                </div>
                <input type="submit" value="Login" class="btn btn-primary btn-block" />
            }
            </div>
        </div>
    </div>
</section>

<section class="resume-section p-3 p-lg-5 d-flex d-column" id="register">
    <div class="my-auto">
        <div class="card card-register mx-auto mt-5" style="min-width: 40rem;">
            <div class="card-header">Register an Account</div>
            <div class="card-body">
                @using (Html.BeginForm("Register", "Profile", FormMethod.Post, new { role = "form" }))
                {
                    if (!Model.ValidationForLogin)
                    {@Html.ValidationSummary(true, "", new { @class = "text-danger" })}
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label for="exampleInputName">First name</label>
                            @Html.TextBox("FirstName", Model.FirstName, new { @class = "form-control" })
                            @if (!Model.ValidationForLogin)
                            { Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger", style = "float: right;" }); }
                        </div>
                        <div class="col-md-6">
                            <label for="exampleInputLastName">Last name</label>
                            @Html.TextBox("LastName", Model.LastName, new { @class = "form-control" })
                            @if (!Model.ValidationForLogin)
                            { Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger", style = "float: right;" }); }
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    @Html.TextBox("Email", Model.Email, new { @class = "form-control" })
                    @if (!Model.ValidationForLogin)
                    { Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", style = "float: right;" }); }
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label for="exampleInputPassword1">Password</label>
                            @Html.Password("Password", Model.Password, new { @class = "form-control" })
                            @if (!Model.ValidationForLogin)
                            { Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", style = "float: right;" }); }
                        </div>
                        <div class="col-md-6">
                            <label for="exampleConfirmPassword">Confirm password</label>
                            @Html.Password("ConfirmPassword", Model.ConfirmPassword, new { @class = "form-control" })
                            @if (!Model.ValidationForLogin)
                            { Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger", style = "float: right;" }); }
                        </div>
                    </div>
                </div>
                <input type="submit" value="Register" class="btn btn-primary btn-block" />
            }
            </div>
        </div>
    </div>
</section>


@section Navigation{
    <li class="nav-item">
        <a class="nav-link js-scroll-trigger" href="#about">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link js-scroll-trigger" href="#login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link js-scroll-trigger" href="#register">Register</a>
    </li>
}

