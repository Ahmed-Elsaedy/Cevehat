@using Cevehat.Web.Models
@model  ApplicationUser

<section class="resume-section p-3 p-lg-5 d-flex flex-column" id="education">
    <div class="my-auto">
        <h2 class="mb-5">Education</h2>
        @foreach (var edu in Model.Educations)
        {
            <div class="resume-item d-flex flex-column flex-md-row mb-5">
                <div class="resume-content mr-auto">
                    <h3 class="mb-0">@edu.OrganizationName</h3>
                    <div class="subheading mb-3">@edu.DegreeTitle</div>
                    <div>@edu.DepartmentName</div>
                    <p>GPA: @edu.GPA</p>
                </div>
                <div class="resume-date text-md-right  ">
                    <span class="text-primary">@edu.GradYear.ToString("MMM yyyy") - @edu.StartYear.ToString("MMM yyyy")</span>

                    <div class="mt-3">
                        @Ajax.ActionLink("Edit", "EditEducation", "Profile", new { id = edu.EducationId },
                       new AjaxOptions()
                       { HttpMethod= "GET", UpdateTargetId = "modalBody", InsertionMode = InsertionMode.Replace  },
                       new { @class = "btn btn-sm btn-warning" })

                        @Html.ActionLink("Delete", "Delete", "Education", new { id = edu.EducationId }, new { @class = "btn btn-sm btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</section>
